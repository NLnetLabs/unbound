; Check that cached NXDOMAIN replies for nameservers do not count towards the
; MAX_TARGET_NX limit.

server:
	module-config: "iterator"
	trust-anchor-signaling: no
	target-fetch-policy: "0 0 0 0 0"
	verbosity: 3
	access-control: 127.0.0.1 allow_snoop
	do-not-query-localhost: no
	qname-minimisation: no
	minimal-responses: no
	rrset-roundrobin: no
stub-zone:
	name: "example.com"
	stub-addr: 127.0.0.2
stub-zone:
	name: "nameservers.com"
	stub-addr: 127.0.0.3
CONFIG_END

SCENARIO_BEGIN Test that the NXNS countermeasure is not triggered for cached NXDOMAIN

RANGE_BEGIN 0 100
	ADDRESS 127.0.0.1
	ENTRY_BEGIN
		MATCH opcode qtype qname
		ADJUST copy_id
		REPLY QR NOERROR
		SECTION QUESTION
			b.a.example.com. IN A
		SECTION ANSWER
			b.a.example.com. IN A 127.0.0.0
	ENTRY_END
RANGE_END

RANGE_BEGIN 31 100
