d	IN	CNAME .
32.1.123.0.10.rpz-ip	CNAME *.
32.3.123.0.10.rpz-ip	A 10.66.0.3
32.3.123.0.10.rpz-ip	A 10.66.0.4
32.4.123.0.10.rpz-ip	CNAME .
TEMPFILE_END

stub-zone:
	name: "."
	stub-addr: 10.20.30.40

CONFIG_END

